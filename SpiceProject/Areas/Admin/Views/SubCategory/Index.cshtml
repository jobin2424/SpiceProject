
@model IEnumerable<SubCategory>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">SubCategory List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {


            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @*This tag helper outputs the name of the field (note the difference between the tag below)*@
                        @*This shows the subcatgory name  *@
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @*Name of the field has changed to "Category Name" because in the model we added the [display] property to change the name*@
                        @*note we can access his because the eagerloaging (explained in the subCategory controller) we can access the category through the subCategory*@
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)    // note the foreacg loop is not needed for displayNameFor but for DisplayFor
                {
                    <tr>
                        <td>
                            @*Outputs names from the SubCatgory Model Class easily using this tag helper, note the difference between this and the one above*@
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub category exists</p>
        }
    </div>
</div>